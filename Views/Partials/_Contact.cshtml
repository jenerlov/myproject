@model ContactViewModel

<div class="container">
    <div class="contact-container">
        <div class="col-6">
            <form method="post" asp-action="Index" asp-controller="Conrtacts" novalidate>
                <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="small text-danger"></span>
                </div>

            <div class="mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="small text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="small text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Message" class="form-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="6"> </textarea>
                    <span asp-validation-for="Message" class="small text-danger"></span>
                </div>

                <div class="mt-3">
                    <button class="btn btn-success">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>